<Window x:Class="Kursavaa.WinAddFolder.StaffAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Kursavaa.WinAddFolder"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
    Title="Сотрудники добавление" Height="1024" Width="1440" Background="#669E85" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="20" Grid.Column="1" Grid.Row="4" Text="Имя" Margin="0,93,0,0"/>

        <TextBlock FontSize="20" Grid.Column="1" Grid.Row="5" Text="Фамилия" Margin="0,93,0,0"/>

        <TextBlock FontSize="20" Grid.Column="1" Grid.Row="6" Text="Отчество" Margin="0,93,0,0"/>

        <TextBlock FontSize="20" Grid.Column="1" Grid.Row="7" Text="Пол" Margin="0,93,0,0"/>
        <ComboBox Name="cbGender" Grid.Column="2" Grid.Row="7" Margin="20,100,20,0" VerticalAlignment="Top"/>

        <TextBlock FontSize="20" Grid.Column="1" Grid.Row="8" Text="ИНН" Margin="0,93,0,0"/>

        <TextBlock FontSize="20" Grid.Column="1" Grid.Row="9" Text="Код подразделения" Margin="0,93,0,0"/>

        <Button Grid.Column="1" Grid.Row="10"  Margin="123,38,123,60"
         materialDesign:ShadowAssist.ShadowAnimationDuration="0:0:0.5"
         Style="{StaticResource MaterialDesignRaisedDarkButton}" Click="AddKassa_Click" Grid.ColumnSpan="2">
            ДОБАВИТЬ
        </Button>

    </Grid>
</Window>
